{
    "manifest_version": 3,
    "name": "BPM Finder",
    "version": "1.0",
    "description": "Identify the BPM of songs on Spotify.",
    "permissions": ["activeTab"],
    "host_permissions": [
      "https://*.spotify.com/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
      }
    },
    "icons": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
  